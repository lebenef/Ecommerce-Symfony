{% extends "FFFastBundle::layout.html.twig" %}

{% block title %}
  Accueil - {{ parent() }}
{% endblock %}

{% block ffgammes_body %}

  <h2>Liste des Utilisateur</h2>

  <ul>
    {% for user in listUser %}
      <li>
        <a href="{{ path('ff_user_view', {'id': user.id}) }}">
          {{ user.username }}
        </a>
      </li>
    {% endfor %}

  </ul>
  
  <ul class="pagination">
  {# On utilise la fonction range(a, b) qui cr√©e un tableau de valeurs entre a et b #}
  {% for p in range(1, nbPages) %}
    <li{% if p == page %} class="active"{% endif %}>
      <a href="{{ path('ff_user_home', {'page': p}) }}">{{ p }}</a>
    </li>
  {% endfor %}
</ul>

{% endblock %}