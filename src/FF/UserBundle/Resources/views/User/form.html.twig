<div class="card">
  <div class="card-header">Login: {{ user.username}}</div>
  <div class="card-body"> 
  Nom: {{user.nom}}
  <br>
  Prenom: {{user.prenom}}
  <br>
  Email : {{ user.email}}</div> 
  <div class="card-footer">  Roles : {% for role in user.roles %}
       {% if role == 'ROLE_ADMIN' %}
     Administrateur
     {% endif %}
      {% if role == 'ROLE_USER' %}
     Utilisateur
     {% endif %}
            {% if role == 'ROLE_CUISINIER' %}
     Cuisinier
     {% endif %}
     
  {% if role == 'ROLE_LIVREUR' %}
     Livreur 
     {% endif %}
{% endfor %}

</div>
</div
</div>
		 
	<div class="well">

<form method="post">
    {{ form_start(form) }}
		<div class="form-group">
        {{ form_label(form.roles, 'Roles') }}
        {{ form_errors(form.roles) }}
        {{ form_widget(form.roles) }}
    </div>

		<div class="form-group">
				{{ form_widget(form.save, {'attr': {'class': 'btn btn-sm btn-success'}, 'label': 'Valider'}) }}
		 </div>

    {{ form_end(form) }}
</form>
</div>
