{% extends "FFCoreBundle::layout.html.twig" %}

{% block title %}
  Accueil - {{ parent() }}
{% endblock %}

{% block body %}
<main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
 <h1 class="well my-4 "> Inscription </h1>
	<div class="col-lg-12 well">
	<div class="row">
        <form role="form" method="POST" action="{{ path("fos_user_registration_register") }}">
					<div class="col-sm-12">
					<div class="row">	
					<div class="col-sm-4 form-group">
<label for="fos_user_registration_form_username" class="form-control-label required">Login</label>
					<input type="text" id="fos_user_registration_form_username" name="fos_user_registration_form[username]" required="required" maxlength="180" pattern=".{2,}" class="form-control" />
					</div>	
					
					<div class="col-sm-8 form-group fos_user_registration_form">
							<label for="fos_user_registration_form_email" class="form-control-label required">Email</label>
							<input type="email" id="fos_user_registration_form_email" name="fos_user_registration_form[email]" required="required" class="form-control" />
					</div>	
					
					<div class="col-sm-6 form-group fos_user_registration_form_username">
					<label for="fos_user_registration_form_plainPassword_first" class="form-control-label required">Mot de Passe</label> 
						<input type="password" id="fos_user_registration_form_plainPassword_first" name="fos_user_registration_form[plainPassword][first]" required="required" autocomplete="new-password" class="form-control" />
					</div>
							<div class="col-sm-6 form-group">
						<label for="fos_user_registration_form_plainPassword_second" class="form-control-label required">Confirmation Mot de Passe </label>
						<input type="password" id="fos_user_registration_form_plainPassword_second" name="fos_user_registration_form[plainPassword][second]" required="required" autocomplete="new-password" class="form-control" />
					</div>
							<div class="col-sm-6 form-group">
									<label for="fos_user_registration_form_nom" class="form-control-label required">Nom</label>
									<input type="text" id="fos_user_registration_form_nom" name="fos_user_registration_form[nom]" required="required" class="form-control" />
							</div>
							<div class="col-sm-6 form-group">
								<label for="fos_user_registration_form_prenom" class="form-control-label required">Prenom</label>
								<input type="text" id="fos_user_registration_form_prenom" name="fos_user_registration_form[prenom]" required="required" class="form-control" />
							</div>
						</div>					
						<div class="form-group">
							<label for="fos_user_registration_form_adresse" class="form-control-label required">Adresse</label>
							<input type="text" id="fos_user_registration_form_adresse" name="fos_user_registration_form[adresse]" required="required" class="form-control" />
						</div>	
						<div class="row">
							<div class="col-sm-4 form-group">
									<label for="fos_user_registration_form_ville" class="form-control-label required">Ville</label>
									<input type="text" id="fos_user_registration_form_ville" name="fos_user_registration_form[ville]" required="required" class="form-control" />
							</div>	
							<div class="col-sm-4 form-group">
									<label for="fos_user_registration_form_codepostal" class="form-control-label required">Code postal</label>
									<input type="text" id="fos_user_registration_form_codepostal" name="fos_user_registration_form[codepostal]" required="required" class="form-control" />
							</div>	
							<div class="col-sm-4 form-group">
									<label for="fos_user_registration_form_pays" class="form-control-label required">Pays</label>
									<input type="text" id="fos_user_registration_form_pays" name="fos_user_registration_form[pays]" required="required" class="form-control" />
							</div>		
						</div>
					
					<div class="form-group">
							<label for="fos_user_registration_form_telephone" class="form-control-label required">Telephone</label>
							<input type="text" id="fos_user_registration_form_telephone" name="fos_user_registration_form[telephone]" required="required" class="form-control" />						
					</div>	
					
					{{ form_row(form._token) }}

       <input type="hidden" name="_target_path" value="/" />

				<input type="submit" value="registration.submit" />
					</div>
					
				</form> 
				</div>
	</div>
       
</main>
{% endblock %}