{% extends "FFFastBundle:Shop:menu.html.twig" %}


    {% block body %}
<main role="main" class="col-md- ml-sm-auto col-lg-10 pt-3 px-4">

        <div class="col-lg-8">

          <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
            <ol class="carousel-indicators">
              <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
              <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
              <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner" role="listbox">
              <div class="carousel-item active">
                <img class="d-block img-fluid" src="http://www.pizzaregal.fr/wp-content/uploads/2015/09/pizza-aix-les-bains.jpg" alt="First slide">
              </div>
              <div class="carousel-item">
                <img class="d-block img-fluid" src="http://piccadilly-market.co.uk/wp-content/uploads/2010/09/Adi-Best-Burgers-1.jpg" alt="Second slide">
              </div>
              <div class="carousel-item">
                <img class="d-block img-fluid" src="http://www.phillysteakmesa.com/wp-content/uploads/2016/04/A9REE9-900x350.png" alt="Third slide">
              </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>


<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="{{ path('ff_fast_accueil') }}">Accueil</a></li>
    <li class="breadcrumb-item active" aria-current="page">Général</li>
  </ol>
</nav>
          <div class="row">


  {% for produits in listProduits %}


            <div class="col-lg-3 col-md-6 mb-4">
              <div class="card h-100">
                <a href="{{ path('ff_fast_views', {'idProduits': produits.id})}}"><img class="card-img-top" src="{{ produits.images.url}}"alt="{{ produits.images.alt }}"height="150" /></a>
                <div class="card-body">
                  <h4 class="card-title">
                   <a href="{{ path('ff_fast_views', {'idProduits': produits.id})}}">{{ produits.name}}</a>
                  </h4>
                  <h5>{{ produits.price}} €</h5>
                  <p class="card-text">Ingredients : 
                        {% for ingredients in produits.ingredients %}
                           {{ingredients.name}}
                        {% endfor %}
                  <br>
                        {{produits.description}}

                  </p>
                </div>
                <div class="card-footer">
                  <small class="text-muted">
                  
            {% if panier[produits.id] is not defined %}
     
                     <a href="{{ path('ff_fast_addc', {'idProduits': produits.id})}}" class="btn btn-success">

  <i class="fa fa-cart-plus" ></i>
      Ajouter 
    </a>
    
                            {% else %}
                            <div>
                                <a href="{{ path('ff_fast_show') }}" class="btn btn-primary">
                                <i class="fa fa-cart-arrow-down" aria-hidden="true"></i> 
                                 Dans votre panier
                                </a>
                            </div>
                        {% endif %}
    
                  </small>
                </div>
              </div>
            </div>

    {% endfor %}

           

        </div>
        <!-- /.col-lg-9 -->
        <nav aria-label="Page navigation example">

    <ul class="pagination">
  {# On utilise la fonction range(a, b) qui crée un tableau de valeurs entre a et b #}
  {% for p in range(1, nbPages) %}
    <li class="page-item" {% if p == page %} class="page-item active" {% endif %}>
      <a class="page-link" href="{{ path('ff_fast_homes', {'page': p}) }}">{{ p }}</a>
    </li>
  {% endfor %}
</ul>
</nav>
      </div>
      <!-- /.row -->

    </div>
    <!-- /.container -->
  </main>
{% endblock %}