
{% extends "FFUserBundle:User:menu.html.twig" %}

{% block title %}
  Accueil - {{ parent() }}
{% endblock %}

{% block body %}
<main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
<div id="content" class="col-md-8">

<h1>Récapitulatif</1>


  <h2>Commande N° {{commande.id}}</h2>
  <h3> Etat :  
  
     {% if commande.etat == '0' %}
     Validée
     {% endif %}
      {% if commande.etat == '1' %}
     En cours de Préparation
     {% endif %}
     {% if commande.etat == '2' %}
     Préparé
     {% endif %}
     
  {% if commande.etat == '3' %}
     En cours de Livraison
     {% endif %}
     
  {% if commande.etat == '4' %}
      Livré
     {% endif %}

  </h3>
  <div class="row">
  <div class="progress">
       {% if commande.etat == '0' %}
  <div class="progress-bar progress-bar-striped progress-bar-animated bg-secondary" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 0%">0%</div>
     {% endif %}
      {% if commande.etat == '1' %}
  <div class="progress-bar progress-bar-striped progress-bar-animated bg-secondary" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 25%">25%</div>
     {% endif %}
     {% if commande.etat == '2' %}
  <div class="progress-bar progress-bar-striped progress-bar-animated bg-secondary" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 50%">50%</div>
     {% endif %}
     
  {% if commande.etat == '3' %}
  <div class="progress-bar progress-bar-striped progress-bar-animated bg-secondary" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 75%">75%</div>
     {% endif %}
     
  {% if commande.etat == '4' %}
  <div class="progress-bar progress-bar-striped progress-bar-animated bg-secondary" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 100%">100%</div>
     {% endif %}
  
  </div>
  </div>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Produit</th>
                        <th>Etat</th>
                        <th>Prix</th>
                    </tr>
                </thead>
                <tbody>
     
                    
                      {% for comprod in commandeproduit %}
                    <tr>
                            <td>{{ comprod.produits.name }}</td>
                            <td>
                                {% if comprod.etat == '0' %}
                                 Validée
                                 {% endif %}
                                  {% if comprod.etat == '1' %}
                                 En cours de Préparation
                                 {% endif %}
                                 {% if comprod.etat == '2' %}
                                 Préparé
                                 {% endif %}

                                 {% if comprod.etat == '3' %}
                                 En cours de Livraison
                                 {% endif %}

                                  {% if comprod.etat == '4' %}
                                  Livré
                                 {% endif %}

                            </td>
                            <td>{{ comprod.produits.price }} €</td>
                        </form>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
            
            <dl class="dl-horizontal pull-right">
                <dt>Total  :</dt><dd> {{commande.price}}€</dd>
                

            </dl>
            
            <div class="span3 pull-left">
                <dl class="pull-left">
                    <dt><h4>Adresse de livraison</h4></dt>
                    <dt>{{commande.user.prenom }} {{ commande.user.nom }}</dt>
                    <dt>{{ commande.user.adresse }}</dt>
                    <dt>{{ commande.user.codepostal }} {{ commande.user.ville }} - {{ commande.user.pays }}</dt>
                </dl>
                 <div>
                    <a href="{{ path('ff_fast_list') }} "  class="btn btn-primary ">
    <i class="fa fa-arrow-left" aria-hidden="true"></i>
                      Retour 
                    </a>
                  </div>
               </div>


</main>

          


  


{% endblock %}




