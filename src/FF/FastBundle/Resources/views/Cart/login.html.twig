
{% extends "FFCoreBundle::layout.html.twig" %}
{% set total = 0 %}

{% block title %}
  Accueil - {{ parent() }}
{% endblock %}

{% block body %}


<div id="content" class="col-md-8 center-block">
<br>
{% for key, messages in app.session.flashbag.all() %}
  {% for message in messages %}
    <div class="alert alert-{{key}}">
     <strong>Succ√®s!</strong> {{ message|trans({}, 'FFFastBundle') }}
    </div>
  {% endfor %}
{% endfor %}
<div>
<div>
 <div class="row">

 <div class="progresss">
 
<div class="circle done">
<span class="label"><i class="fa fa-shopping-cart" aria-hidden="true"></i>
</span>
<span class="title">0%</span>
</div>
<span class="bar done"></span>

<div class="circle active">
<span class="label"><i class="fa fa-user-circle-o" aria-hidden="true"></i>
</span>
<span class="title">25%</span>
</div>
<span class="bar"></span>

<div class="circle ">
<span class="label"><i class="fa fa-check-circle-o" aria-hidden="true"></i>
</span>
<span class="title">50%</span>
</div>
<span class="bar"></span>
<div class="circle">
<span class="label"><i class="fa fa-paypal" aria-hidden="true"></i>
</span>
<span class="title">75%</span>
</div>
<span class="bar"></span>
<div class="circle">
<span class="label"><i class="fa fa-thumbs-up" aria-hidden="true"></i>
</i>
<span class="title">100%</span>
</div>
</div>
</div>

 <div class="container">
        <form class="form-horizontal" role="form" method="POST" action="{{ path("fos_user_security_check") }}">
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <h2>Connectez vous !!!</h2>
                    <hr>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <div class="form-group has-danger">
                        <label class="sr-only" for="email">E-Mail Address</label>
                        <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                            <div class="input-group-addon" style="width: 2.6rem"><i class="fa fa-at"></i></div>
                             <input type="text" id="username" name="_username" " class="form-control" placeholder="login" required="required" autocomplete="username" />

                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="sr-only" for="password">Password</label>
                        <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                            <div class="input-group-addon" style="width: 2.6rem"><i class="fa fa-key"></i></div>
                          <input type="password" id="password" name="_password" class="form-control" placeholder="Mot de passe" required="required" autocomplete="current-password" />                   
                          <input type="hidden" name="_target_path" value="/cart/login" />

                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6" style="padding-top: .35rem">
                    <div class="form-check mb-2 mr-sm-2 mb-sm-0">
                        <label class="form-check-label">
                          <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                          <label for="remember_me">Se souvenir de moi ?</label>
                        </label>
                    </div>
                </div>
            </div>
            <div class="row" style="padding-top: 1rem">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <button type="submit" class="btn btn-success"><i class="fa fa-sign-in"></i> Login</button>
                    <a class="btn btn-link" href="/password/reset">Forgot Your Password?</a>
                </div>
            </div>
        </form>
    </div>
{% endblock %}