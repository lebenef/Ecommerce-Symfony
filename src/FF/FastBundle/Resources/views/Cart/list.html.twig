{% extends "FFFastBundle::layout.html.twig" %}

{% block title %}
  Accueil - {{ parent() }}
{% endblock %}

{% block ffgammes_body %}

  <h2>Mes Commmandes</h2>

  <ul>
    {% for commande in listCommandes %}
      <li>
         Commande numéro : {{ commande.id }} Le : 
          {{ commande.date |date('d-m-Y')}}
       Etat : 
     {% if commande.etat == '0' %}
     Validée
     {% endif %}
      {% if commande.etat == '1' %}
     En cours de Préparation
     {% endif %}
     {% if commande.etat == '2' %}
     Préparé
     {% endif %}
     
  {% if commande.etat == '3' %}
     En cours de Livraison
     {% endif %}
     
  {% if commande.etat == '4' %}
      Livré
     {% endif %}

    <a href="{{ path('ff_fast_viewcommande', {'id' : commande.id} ) }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
Voir    </a>        
      </li>
    {% endfor %}

  </ul>
  
<nav aria-label="Page navigation example">

    <ul class="pagination">
  {# On utilise la fonction range(a, b) qui crée un tableau de valeurs entre a et b #}
  {% for p in range(1, nbPages) %}
    <li class="page-item" {% if p == page %} class="page-item active" {% endif %}>
      <a class="page-link" href="{{ path('ff_fast_list', {'page': p}) }}">{{ p }}</a>
    </li>
  {% endfor %}
</ul>
</nav>

{% endblock %}