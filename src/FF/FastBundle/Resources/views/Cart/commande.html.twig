{% extends "FFFastBundle:Cart:menu.html.twig" %}
{% set total = 0 %}

{% block title %}
  Validation - {{ parent() }}
{% endblock %}

{% block body %}
<h2>Valider mon panier</h2>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Références</th>
                        <th>Quantité</th>
                        <th>Prix unitaire</th>
                        <th>Total </th>
                    </tr>
                </thead>
                <tbody>
                    {% if produits|length == 0 %}
                        <tr>
                            <td colspan="4"><center>Aucun articles dans votre panier</center></td>
                        </tr>
                    {% endif %}
                    
                    {% for produit in produits %}
                    <tr>
                            <td>{{ produit.nom }}</td>
                            <td>
                                {{ panier[produit.id] }}
                            </td>
                            <td>{{ produit.price }} €</td>
                            <td>{{ produit.price * panier[produit.id] }} €</td>
                        </form>
                    </tr>
                    {% set total = total + (produit.price * panier[produit.id]) %}
                    {% endfor %}
                </tbody>
            </table>
            
            <dl class="dl-horizontal pull-right">
                <dt>Total  :</dt><dd>{{ total }} €</dd>
                

            </dl>
            
            <div class="span3 pull-left">
                <dl class="pull-left">
                    <dt><h4>Adresse de livraison</h4></dt>
                    <dt>{{ user.prenom }} {{ user.nom }}</dt>
                    <dt>{{ user.adresse }}</dt>
                    <dt>{{ user.codepostal }} {{ user.ville }} - {{ user.pays }}</dt>
                </dl>
            </div>
            

            
            <div class="clearfix"></div>
            <a href="#" class="btn btn-success pull-right">Payer</a>
            <a href="" class="btn btn-primary">retour</a>
        </div>

    </div>
</div>

{% endblock %}
