{% extends "FFCoreBundle:Core:menu.html.twig" %}

{% block title %}
  Lecture d'un ingredient - {{ parent() }}
{% endblock %}

{% block body %}
<main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
<div id="content" class="col-md-8">
{% for key, messages in app.session.flashbag.all() %}
  {% for message in messages %}
    <div class="alert alert-{{key}}">
     <strong>Succ√®s!</strong> {{ message|trans({}, 'FFFastBundle') }}
    </div>
  {% endfor %}
{% endfor %}

  <h2>{{ ingredients.name}}</h2>

  <div class="well">
    {{ ingredients.description }}
  </div>
  {% if ingredients.images != null %}
    <img
  {# src="{{ asset(ingredients.images.webPath) }}"#}
  src="{{ ingredients.images.url}}"
  alt="{{ ingredients.images.alt }}"
  height="100"
/>
{% endif %}

  <p>
    <a href="{{ path('ff_fast_homei') }}" class="btn btn-primary ">
    <i class="fa fa-arrow-left" aria-hidden="true"></i>
      Retour
    </a>
    <a href="{{ path('ff_fast_editi', {'id': ingredients.id}) }}" class="btn btn-warning">
    <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
      Modifier
    </a>
    <a href="{{ path('ff_fast_deletei', {'id': ingredients.id}) }}" class="btn btn-danger">
    <i class="fa fa-trash" aria-hidden="true"></i>
      Supprimer
    </a>
  </p>
</main>
{% endblock %}