{% extends "FFFastBundle::layout.html.twig" %}

{% block title %}
  Lecture d'une Gamme - {{ parent() }}
{% endblock %}

{% block ffgammes_body %}

  <h2>{{ ingredients.name}}</h2>

  <div class="well">
    {{ ingredients.description }}
  </div>

  <p>
    <a href="{{ path('ff_fast_homei') }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour à la liste
    </a>
    <a href="{{ path('ff_fast_editi', {'id': ingredients.id}) }}" class="btn btn-default">
      <i class="glyphicon glyphicon-edit"></i>
      Modifier l'ingrédient
    </a>
    <a href="{{ path('ff_fast_deletei', {'id': ingredients.id}) }}" class="btn btn-danger">
      <i class="glyphicon glyphicon-trash"></i>
      Supprimer l"ingrédient
    </a>
  </p>

{% endblock %}