
{% extends "FFFastBundle::layout.html.twig" %}

{% block title %}
  Accueil - {{ parent() }}
{% endblock %}

{% block ffgammes_body %}

  <h2>Mes Ingredients</h2>

  <ul>
    {% for ingredients in listIngredients %}
      <li>
        <a href="{{ path('ff_fast_viewi', {'id': ingredients.id}) }}">
          {{ ingredients.name }}
        </a>
      </li>
    {% else %}
      <li>Il n'y a pas encore de gammes !</li>
    {% endfor %}
  </ul>
  
  <ul class="pagination">
  {# On utilise la fonction range(a, b) qui cr√©e un tableau de valeurs entre a et b #}
  {% for p in range(1, nbPages) %}
    <li{% if p == page %} class="active"{% endif %}>
      <a href="{{ path('ff_fast_homei', {'page': p}) }}">{{ p }}</a>
    </li>
  {% endfor %}
</ul>
  <p>
    <a href="{{ path('ff_fast_addi')}}" class="btn btn-success">
Ajouter un ingredient    </a>
  </p>
{% endblock %}