
{% extends "FFFastBundle::layout.html.twig" %}

{% block title %}
  Accueil - {{ parent() }}
{% endblock %}

{% block ffgammes_body %}

  <h2>Mes Gammes</h2>

  <ul>
    {% for gammes in listGammes %}
      <li>
        <a href="{{ path('ff_fast_view', {'id': gammes.id}) }}">
          {{ gammes.name }}
        </a>
      </li>
    {% else %}
      <li>Il n'y a pas encore de gammes !</li>
    {% endfor %}
  </ul>
    <ul class="pagination">
  {# On utilise la fonction range(a, b) qui cr√©e un tableau de valeurs entre a et b #}
  {% for p in range(1, nbPages) %}
    <li{% if p == page %} class="active"{% endif %}>
      <a href="{{ path('ff_fast_home', {'page': p}) }}">{{ p }}</a>
    </li>
  {% endfor %}
</ul>
  <p>
    <a href="{{ path('ff_fast_add')}}" class="btn btn-success">
Ajouter une gamme    </a>
  </p>
{% endblock %}