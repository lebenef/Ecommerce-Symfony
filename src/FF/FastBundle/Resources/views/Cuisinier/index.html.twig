{% extends "FFFastBundle:Cuisinier:menu.html.twig" %}


    {% block body %}
<main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
{% for key, messages in app.session.flashbag.all() %}
  {% for message in messages %}
    <div class="alert alert-{{key}}">
     <strong>Succès!</strong> {{ message|trans({}, 'FFFastBundle') }}
    </div>
  {% endfor %}
  {% endfor %}
  
<div id="content" class="col-md-8">
  <h2>Liste des Commmandes</h2>
  <table class="table">
  <thead class="thead-inverse">
    <tr>
      <th>Numéro</th>
      <th>Date </th>
      <th>Etat</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
  {% for commande in listCommandes %}
    <tr>
      <th scope="row"> {{ commande.id }}</th>
      <td>{{ commande.date |date('d-m-Y')}}</td>
      <td>     
      {% if commande.etat == '0' %}
     Validée
     {% endif %}
      {% if commande.etat == '1' %}
     En cours de Préparation
     {% endif %}
     {% if commande.etat == '2' %}
     Préparé
     {% endif %}
     
  {% if commande.etat == '3' %}
     En cours de Livraison
     {% endif %}
     
  {% if commande.etat == '4' %}
      Livré
     {% endif %}
     </td>
      <td>
         {% if commande.etat == '0' %}
         <a href="{{ path('ff_fast_editcu', {'idCommande': commande.id}) }}" class="btn btn-success btn-sm">
        <i class="fa fa-plus-square-o" aria-hidden="true"></i>
         </a>     
      {% endif %}
      {% if commande.etat == '1' %}
         <a href="{{ path('ff_fast_editcu', {'idCommande': commande.id}) }}" class="btn btn-secondary btn-sm">
         <i class="fa fa-eye" aria-hidden="true"></i>
            
        </a>     
        {% endif %}    
      </td>
    </tr>
   {% endfor %}

  </tbody>
</table>
  
<nav aria-label="Page navigation example">

    <ul class="pagination">
  {# On utilise la fonction range(a, b) qui crée un tableau de valeurs entre a et b #}
  {% for p in range(1, nbPages) %}
    <li class="page-item" {% if p == page %} class="page-item active" {% endif %}>
      <a class="page-link" href="{{ path('ff_fast_homecu', {'page': p}) }}">{{ p }}</a>
    </li>
  {% endfor %}
</ul>
</nav>
</ul>
</nav>
      </div>
      <!-- /.row -->

    </div>
    <!-- /.container -->
</main>
{% endblock %}