     <h3> Formulaire </h3>
		 
	<div class="well">
{% form_theme form 'bootstrap_4_layout.html.twig' %}
<form method="post">
    {{ form_start(form) }}

		<div class="form-group">
        {{ form_label(form.name, 'Nom') }}
        {{ form_errors(form.name) }}
        {{ form_widget(form.name) }}
    </div>

		 <div class="form-group">
        {{ form_label(form.description) }}
        {{ form_errors(form.description) }}
        {{ form_widget(form.description) }}
    </div>
		

		<div class="form-group">
        {{ form_label(form.gammes, 'Gamme') }}
        {{ form_errors(form.gammes) }}
        {{ form_widget(form.gammes) }}
    </div>
		<div class="form-group">
        {{ form_label(form.ingredients, 'Ingredients') }}
        {{ form_errors(form.ingredients) }}
        {{ form_widget(form.ingredients) }}
    </div>
		<div>
        {{ form_label(form.price, 'Prix') }}
        {{ form_errors(form.price) }}
        {{ form_widget(form.price) }}
    </div>	
		
		<div class="form-group">
        {{ form_label(form.images, 'Image') }}
        {{ form_errors(form.images) }}
        {{ form_widget(form.images) }}
    </div>
		<div class="form-group">
				{{ form_widget(form.save, {'attr': {'class': 'btn btn-sm btn-success'}, 'label': 'Valider'}) }}
		 </div>

    {{ form_end(form) }}
</form>
</div>
