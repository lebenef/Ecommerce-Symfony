{% extends "FFCoreBundle:Core:menu.html.twig" %}

{% block title %}
  Accueil - {{ parent() }}
{% endblock %}

{% block body %}
<main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
<div id="content" class="col-md-8">

  <h2>Mes Produits</h2>

  <ul>
    {% for produits in listProduits %}
      <li>
        <a href="{{ path('ff_fast_viewp', {'id': produits.id}) }}">
          {{ produits.name }}
        </a>
      </li>
    {% else %}
      <li>Il n'y a pas encore de produits !</li>
    {% endfor %}
  </ul>
    <ul class="pagination">
  {# On utilise la fonction range(a, b) qui cr√©e un tableau de valeurs entre a et b #}
  {% for p in range(1, nbPages) %}
    <li{% if p == page %} class="active"{% endif %}>
      <a href="{{ path('ff_fast_homei', {'page': p}) }}">{{ p }}</a>
    </li>
  {% endfor %}
</ul>
  <p>
    <a href="{{ path('ff_fast_addp')}}" class="btn btn-success">
Ajouter un produit    </a>
  </p>
</main>  
{% endblock %}