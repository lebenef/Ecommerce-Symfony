{% extends "FFCoreBundle:Core:menu.html.twig" %}

{% block title %}
  Page d'accueil - {{ parent() }}
{% endblock %}

{% block body %}

     
        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
        <div class" row ">
          <h1 class="h2 my-4 ">Commentaires</h1>
           
                     <!-- /.card -->

          <div class="card card-outline-secondary my-4">
            <div class="card-header">
              Commentaires
            </div>
            <div class="card-body">
            {% if commentaires == null%}
             <p>Pas de nouveeaux commentaires..</p
              <hr>
             {% endif %}
            {% for commentaire in commentaires %}
              <h5> {{commentaire.produits.name}}</h5>
              <p>{{commentaire.commentaire}}</p>
              <small class="text-muted">Poster par 
              {% if commentaire.user  %}
              
              {{commentaire.user.username}} 
              {% else %}
              Anonyme
               {% endif %}
              
              le {{commentaire.date |date('d-m-Y')}}</small>
              <hr>
              {% endfor%}
              

            </div>
          </div>
          <!-- /.card -->
              </div>

        </main>
     
    </div>

    

{% endblock %}